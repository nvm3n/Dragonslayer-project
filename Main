import java.util.Scanner;
public class Player {
    private String name;
    private int health = 100;
    private int shield = 50;
    private double strength //Gewicht: Shcnelligkeit
    private double agility;
    private double power; //dmg multiplier
    private double defence; // damage absorbiert
    private int mana = 100;
    private double intelligence; //dmg multiplier

    public void setName() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Bitte gib deinen Namen ein: ");
        this.name = scanner.nextLine();
        System.out.println("Hi, " + this.name);
    }
    public void setKlasse() {
        System.out.println("Es gibt zwei Klassen: Krieger und Magier.");
        System.out.println("Der Krieger hat 100 Leben, 50 Schild, 30 Schwer, 10 Verteidigung, 200 Schaden und ist 20 Schnell.");
        System.out.println("Der Magier hat 100 Leben, 50 Schild, 10 Schwer, 10 Verteidigung, 50 Schaden und ist 40 Schnell.");
        System.out.println("Gib deine Klasse ein Krieger oder Magier: ");
        this.Klasse = scanner.nextLine();
        if(Klasse =! "Krieger" && Klasse=! "Magier"){
            System.out.println("Ungültige Klasse. Bitte wähle Krieger oder Magier.");
            setKlasse();
        } else if(Klasse == "Krieger"){
            this.strength = 30;
            private double agility = 50 - strength;
            this.power = 100;
            this.defence = 10;
            this.intelligence = 1;
        } else if(Klasse == "Magier"){
            this.strength = 10;
            this.power = 50;
            this.defence = 10;
            this.intelligence = 5;
            private double agility = 50 - strength;
        }
    }


   
}
